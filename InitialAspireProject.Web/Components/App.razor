@using InitialAspireProject.Web.Services
@inject ThemeService ThemeService
<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link id="theme-link" rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="@ThemeService.GetCurrentThemeInfo().CssUrl" />
    <link rel="stylesheet" href="app.css" />
    <link rel="stylesheet" href="InitialAspireProject.Web.styles.css" />
    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet />
</head>

<body>
    <Routes />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="_framework/blazor.web.js"></script>
    
    <script>
        window.updateThemeLink = (cssUrl) => {
            const themeLink = document.getElementById('theme-link');
            if (themeLink) {
                themeLink.href = cssUrl;
            }
        };
    </script>
</body>

</html>