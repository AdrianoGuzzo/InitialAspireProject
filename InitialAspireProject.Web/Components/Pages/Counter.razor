@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter - Initial Aspire Project</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="display-4">
                        <i class="bi bi-plus-square me-3"></i>
                        Counter
                    </h1>
                    <p class="lead text-muted">Demonstração de componente interativo</p>
                </div>
            </div>
    
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow">
                        <div class="card-header bg-primary text-white text-center">
                            <h5 class="mb-0">
                                <i class="bi bi-calculator me-2"></i>
                                Contador Interativo
                            </h5>
                        </div>
                        <div class="card-body text-center">               
                            <div class="mb-4">
                                <div class="display-1 text-primary fw-bold" role="status" aria-live="polite">
                                    @currentCount
                                </div>
                                <p class="text-muted">Valor atual do contador</p>
                            </div>
           
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary btn-lg" @onclick="IncrementCount">
                                    <i class="bi bi-plus-lg me-2"></i>
                                    Incrementar
                                </button>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-outline-secondary" @onclick="DecrementCount">
                                        <i class="bi bi-dash-lg me-1"></i>
                                        Decrementar
                                    </button>
                                    <button class="btn btn-outline-warning" @onclick="ResetCount">
                                        <i class="bi bi-arrow-clockwise me-1"></i>
                                        Reset
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-center text-muted">
                            <small>
                                <i class="bi bi-info-circle me-1"></i>
                                Clique nos botões para interagir
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center mt-4">
                <div class="col-md-8 col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="bi bi-graph-up me-2"></i>
                                Estatísticas
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="border-end">
                                        <div class="h4 text-success">@totalClicks</div>
                                        <small class="text-muted">Total de Cliques</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="border-end">
                                        <div class="h4 text-info">@Math.Max(maxValue, currentCount)</div>
                                        <small class="text-muted">Valor Máximo</small>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="h4 text-warning">@Math.Min(minValue, currentCount)</div>
                                    <small class="text-muted">Valor Mínimo</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int currentCount = 0;
    private int totalClicks = 0;
    private int maxValue = 0;
    private int minValue = 0;

    private void IncrementCount()
    {
        currentCount++;
        totalClicks++;
        maxValue = Math.Max(maxValue, currentCount);
    }

    private void DecrementCount()
    {
        currentCount--;
        totalClicks++;
        minValue = Math.Min(minValue, currentCount);
    }

    private void ResetCount()
    {
        currentCount = 0;
        totalClicks++;
    }
}