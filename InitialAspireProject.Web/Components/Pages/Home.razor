@page "/"
@attribute [StreamRendering]

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

<AuthorizeView>
    <Authorized>
        <div class="alert alert-success">
            <h4>Bem-vindo, @context.User.Identity?.Name!</h4>
            <p>Você está autenticado com sucesso.</p>
            <p><strong>Claims do usuário:</strong></p>
            <ul>
                @foreach (var claim in context.User.Claims)
                {
                    <li><strong>@claim.Type:</strong> @claim.Value</li>
                }
            </ul>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="alert alert-info">
            <h4>Você não está autenticado</h4>
            <p>Para acessar recursos protegidos, faça <a href="/login">login</a>.</p>
        </div>
    </NotAuthorized>
</AuthorizeView>

<p>Welcome to your new app.</p>