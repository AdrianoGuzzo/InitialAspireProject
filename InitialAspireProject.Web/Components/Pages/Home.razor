@page "/"
@attribute [StreamRendering]

<PageTitle>Home - Initial Aspire Project</PageTitle>

<div class="container-fluid">
    <!-- Hero Section -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="bg-primary text-white rounded-3 p-5 text-center">
                <div class="row align-items-center">
                    <div class="col-lg-8 mx-auto">
                        <i class="bi bi-rocket-takeoff display-1 mb-3"></i>
                        <h1 class="display-4 fw-bold mb-3">Initial Aspire Project</h1>
                        <p class="lead mb-4">
                            Bem-vindo à sua aplicação moderna construída com ASP.NET Core, Blazor e Bootstrap
                        </p>
                        <AuthorizeView>
                            <Authorized>
                                <div class="d-flex justify-content-center gap-3">
                                    <a href="/counter" class="btn btn-light btn-lg">
                                        <i class="bi bi-plus-square me-2"></i>
                                        Explorar Counter
                                    </a>
                                    <a href="/weather" class="btn btn-outline-light btn-lg">
                                        <i class="bi bi-cloud-sun me-2"></i>
                                        Ver Clima
                                    </a>
                                </div>
                            </Authorized>
                            <NotAuthorized>
                                <a href="/login" class="btn btn-light btn-lg">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>
                                    Fazer Login
                                </a>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- User Status Section -->
    <div class="row mb-5">
        <div class="col-12">
            <AuthorizeView>
                <Authorized>
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-person-check-fill me-2"></i>
                                Status de Autenticação
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h6 class="text-success">
                                        <i class="bi bi-check-circle-fill me-2"></i>
                                        Bem-vindo, @context.User.Identity?.Name!
                                    </h6>
                                    <p class="text-muted mb-0">Você está autenticado com sucesso no sistema.</p>
                                </div>
                                <div class="col-md-6 text-md-end">
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-shield-check me-1"></i>
                                        Autenticado
                                    </span>
                                </div>
                            </div>
                            
                            <!-- Claims Details (Collapsible) -->
                            <div class="mt-3">
                                <button class="btn btn-outline-success btn-sm" type="button" data-bs-toggle="collapse" 
                                        data-bs-target="#claimsCollapse" aria-expanded="false">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Ver Detalhes do Usuário
                                </button>
                                <div class="collapse mt-3" id="claimsCollapse">
                                    <div class="card card-body bg-light">
                                        <h6 class="mb-3">
                                            <i class="bi bi-person-lines-fill me-2"></i>
                                            Claims do Usuário:
                                        </h6>
                                        <div class="table-responsive">
                                            <table class="table table-sm table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Tipo</th>
                                                        <th>Valor</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var claim in context.User.Claims)
                                                    {
                                                        <tr>
                                                            <td><code>@claim.Type</code></td>
                                                            <td>@claim.Value</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="card border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                Acesso Limitado
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h6 class="text-warning">
                                        <i class="bi bi-person-x me-2"></i>
                                        Você não está autenticado
                                    </h6>
                                    <p class="text-muted mb-0">
                                        Para acessar todos os recursos da aplicação, faça login com suas credenciais.
                                    </p>
                                </div>
                                <div class="col-md-4 text-md-end mt-3 mt-md-0">
                                    <a href="/login" class="btn btn-warning">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>
                                        Fazer Login
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>

    <!-- Features Section -->
    <div class="row mb-5">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="bi bi-stars me-2"></i>
                Recursos da Aplicação
            </h2>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-palette-fill text-primary display-4 mb-3"></i>
                    <h5 class="card-title">Sistema de Temas</h5>
                    <p class="card-text text-muted">
                        Escolha entre 10 temas diferentes do Bootstrap para personalizar a aparência da aplicação.
                    </p>
                    <a href="/themes" class="btn btn-outline-primary">
                        <i class="bi bi-palette me-1"></i>
                        Explorar Temas
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-plus-square-fill text-success display-4 mb-3"></i>
                    <h5 class="card-title">Contador Interativo</h5>
                    <p class="card-text text-muted">
                        Demonstração de componente Blazor interativo com estatísticas em tempo real.
                    </p>
                    <AuthorizeView>
                        <Authorized>
                            <a href="/counter" class="btn btn-outline-success">
                                <i class="bi bi-plus-square me-1"></i>
                                Usar Counter
                            </a>
                        </Authorized>
                        <NotAuthorized>
                            <span class="text-muted">
                                <i class="bi bi-lock me-1"></i>
                                Login necessário
                            </span>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-cloud-sun-fill text-info display-4 mb-3"></i>
                    <h5 class="card-title">Previsão do Tempo</h5>
                    <p class="card-text text-muted">
                        Dados carregados de API backend com cache e visualização moderna.
                    </p>
                    <AuthorizeView>
                        <Authorized>
                            <a href="/weather" class="btn btn-outline-info">
                                <i class="bi bi-cloud-sun me-1"></i>
                                Ver Clima
                            </a>
                        </Authorized>
                        <NotAuthorized>
                            <span class="text-muted">
                                <i class="bi bi-lock me-1"></i>
                                Login necessário
                            </span>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        </div>
    </div>

    <!-- Technology Stack -->
    <div class="row">
        <div class="col-12">
            <div class="card bg-light">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-stack me-2"></i>
                        Stack Tecnológico
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-2 col-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-microsoft text-primary display-6"></i>
                                <div class="mt-2">
                                    <strong>ASP.NET Core</strong>
                                    <br><small class="text-muted">Backend</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-lightning-fill text-warning display-6"></i>
                                <div class="mt-2">
                                    <strong>Blazor</strong>
                                    <br><small class="text-muted">Frontend</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-bootstrap-fill text-purple display-6"></i>
                                <div class="mt-2">
                                    <strong>Bootstrap</strong>
                                    <br><small class="text-muted">UI Framework</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-database-fill text-success display-6"></i>
                                <div class="mt-2">
                                    <strong>PostgreSQL</strong>
                                    <br><small class="text-muted">Database</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-shield-check text-danger display-6"></i>
                                <div class="mt-2">
                                    <strong>Identity</strong>
                                    <br><small class="text-muted">Auth</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-4 mb-3">
                            <div class="p-3">
                                <i class="bi bi-cloud-fill text-info display-6"></i>
                                <div class="mt-2">
                                    <strong>Aspire</strong>
                                    <br><small class="text-muted">Orchestration</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>