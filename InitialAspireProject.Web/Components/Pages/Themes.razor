@page "/themes"
@using InitialAspireProject.Web.Components
@using InitialAspireProject.Web.Services
@inject ThemeService ThemeService

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-4">
                        <i class="bi bi-palette-fill me-3"></i>
                        Galeria de Temas
                    </h1>
                    <p class="lead text-muted">Explore e escolha entre diferentes temas do Bootstrap</p>
                </div>
                <ThemeSelector />
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            <div class="alert alert-info d-flex align-items-center">
                <i class="bi bi-info-circle-fill me-2"></i>
                <div>
                    <strong>Tema Atual:</strong> @ThemeService.GetCurrentThemeInfo().Name - 
                    @ThemeService.GetCurrentThemeInfo().Description
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-mouse me-2"></i>
                        Botões
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <button class="btn btn-primary">Primary</button>
                        <button class="btn btn-secondary">Secondary</button>
                        <button class="btn btn-success">Success</button>
                        <button class="btn btn-danger">Danger</button>
                        <button class="btn btn-warning">Warning</button>
                        <button class="btn btn-info">Info</button>
                        <button class="btn btn-light">Light</button>
                        <button class="btn btn-dark">Dark</button>
                    </div>
                    <hr>
                    <div class="d-flex flex-wrap gap-2">
                        <button class="btn btn-outline-primary">Outline Primary</button>
                        <button class="btn btn-outline-success">Outline Success</button>
                        <button class="btn btn-outline-danger">Outline Danger</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Alertas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-primary" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        Alerta primário com ícone
                    </div>
                    <div class="alert alert-success" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        Operação realizada com sucesso!
                    </div>
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Atenção: Verifique os dados
                    </div>
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-x-circle me-2"></i>
                        Erro: Algo deu errado
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-ui-checks me-2"></i>
                        Formulários
                    </h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="exampleInput" class="form-label">Input Text</label>
                            <input type="text" class="form-control" id="exampleInput" placeholder="Digite algo...">
                        </div>
                        <div class="mb-3">
                            <label for="exampleSelect" class="form-label">Select</label>
                            <select class="form-select" id="exampleSelect">
                                <option selected>Escolha uma opção</option>
                                <option value="1">Opção 1</option>
                                <option value="2">Opção 2</option>
                                <option value="3">Opção 3</option>
                            </select>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="exampleCheck">
                            <label class="form-check-label" for="exampleCheck">
                                Checkbox de exemplo
                            </label>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
                                <label class="form-check-label" for="exampleRadios1">
                                    Radio 1
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
                                <label class="form-check-label" for="exampleRadios2">
                                    Radio 2
                                </label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-award me-2"></i>
                        Badges e Progress
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Badges</h6>
                    <div class="mb-3">
                        <span class="badge bg-primary me-1">Primary</span>
                        <span class="badge bg-secondary me-1">Secondary</span>
                        <span class="badge bg-success me-1">Success</span>
                        <span class="badge bg-danger me-1">Danger</span>
                        <span class="badge bg-warning text-dark me-1">Warning</span>
                        <span class="badge bg-info me-1">Info</span>
                    </div>
                    
                    <h6>Progress Bars</h6>
                    <div class="progress mb-2">
                        <div class="progress-bar" role="progressbar" style="width: 25%"></div>
                    </div>
                    <div class="progress mb-2">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 50%"></div>
                    </div>
                    <div class="progress mb-2">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 75%"></div>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-danger" role="progressbar" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-compass me-2"></i>
                        Navegação
                    </h5>
                </div>
                <div class="card-body">
                    <nav>
                        <div class="nav nav-tabs mb-3" id="nav-tab" role="tablist">
                            <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab">Home</button>
                            <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab">Profile</button>
                            <button class="nav-link" id="nav-contact-tab" data-bs-toggle="tab" data-bs-target="#nav-contact" type="button" role="tab">Contact</button>
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        <div class="tab-pane fade show active" id="nav-home" role="tabpanel">
                            <p>Conteúdo da aba Home. Este é um exemplo de como as abas ficam com o tema atual.</p>
                        </div>
                        <div class="tab-pane fade" id="nav-profile" role="tabpanel">
                            <p>Conteúdo da aba Profile.</p>
                        </div>
                        <div class="tab-pane fade" id="nav-contact" role="tabpanel">
                            <p>Conteúdo da aba Contact.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col text-center">
            <a href="/login" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left me-2"></i>
                Voltar para Login
            </a>
        </div>
    </div>
</div>